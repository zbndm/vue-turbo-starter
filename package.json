{
  "name": "monorepo-vue-starter",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "preinstall": "npx only-allow pnpm",
    "prepare": "simple-git-hooks",
    "release": "tsx scripts/release.ts",
    "start:apps": "turbo run start --parallel --filter='./apps/*'",
    "start:nuxt-app": "turbo run start --filter nuxt-app",

    "start:vite-app": "turbo run start --filter vite-app",
    "start": "turbo run start --parallel",
    "test:watch": "vitest -w --dir",
    "test": "pnpm test --filter vitest",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@types/prompts": "2.4.2",
    "@types/semver": "7.3.13",
    "eslint-config-custom": "link:packages/eslint-config-custom",
    "conventional-changelog-cli": "2.2.2",
    "execa": "6.1.0",
    "picocolors": "1.0.0",
    "prettier": "2.8.1",
    "prompts": "2.4.2",
    "semver": "7.3.8",
    "simple-git-hooks": "2.8.1",
    "tsx": "3.12.1",
    "turbo": "1.6.3",
    "typescript": "4.9.4"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "simple-git-hooks": {
    "pre-push": "pnpm lint",
    "commit-msg": "pnpm exec tsx scripts/verifyCommit.ts $1"
  },
  "packageManager": "pnpm@7.22.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": ["@types/react"],
      "allowedVersions": {
        "vite": "3"
      }
    }
  }
}